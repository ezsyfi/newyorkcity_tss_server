    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'client_lib'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=gotham-client"
                ],
                "filter": {
                    "name": "client_lib",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'cli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cli",
                    "--package=gotham-client"
                ],
                "filter": {
                    "name": "cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'cli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=cli",
                    "--package=gotham-client"
                ],
                "filter": {
                    "name": "cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'cli wallet'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cli",
                    "--package=gotham-client"
                ],
                "filter": {
                    "name": "cli",
                    "kind": "bin"
                }
            },
            "args": [
                "wallet",
                "-b"
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}